<div class="row justify-content-center mt-5">
  <div class="col col-md-8">

    <%= form_with model: @post do |form| %>
      <div>
        <%= form.label :body, "Post", class: "form-label" %><br>
        <%= form.text_area :body, class: "form-control", maxlength: "255", required: true %>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <%= form.submit "Save Post", class: "btn btn-primary my-3" %>
        <small class="text-black-50 align-self-start">Maximum length 255</small>
      </div>
    <% end %>
    <%= render "posts_list" %>
  </div>
</div>
